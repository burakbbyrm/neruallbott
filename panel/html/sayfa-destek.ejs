<meta name="viewport" content="width=device-width, initial-scale=1.0">

<%- include('başlık.ejs', {bot, user, path}) %>
<div class="container">

  
  <% const guild = sunucu %>
<div class="container">

	<div class="row justify-content-md-center">
     	 <div class="container">
  <div class="jumbotron" style="background-color:#24252a">
    <div align="center"> 
	<div align="center"><h2 style="color: #fff;"><i class="" aria-hidden="true"></i>Sahte Hesap Engelleme</h2></div>
  <div align="center"><h2 style="color: #fff;"><i class="" aria-hidden="true"></i>━━━━━━━━━━</h2></div>
  </div>  </div>
	
  <!--<center><h7 style="color:red">Bakımda...</h7></center>-->
  
	<div class="row
              ">
    
<div class="col">
    <div class="container">
      <form method="post">
        <ul class="list-group list-group-flush">
          
          
        <%  let arr = [];
bot.commands.forEach(x => {
if (!arr.includes(x.help.name)) {
arr.push(x.help.name)
}
})    
%>
<br>
  <div class="row">
        <div class="col-25">
          <label for="fake">Gün Süresi</label>
        </div>
        <div class="col-75">
          <% if (bot.ayar.has(`fake_${sunucu.id}`) === false) { %>
          <input type="text" style="text-align: left; width:87%;" name="fake" onkeypress="return event.charCode &gt;= 48 &amp;&amp; event.charCode &lt;= 57" onblur="this.value = minmax(this.value, 1, 31);" id="fake" maxlength="2" value="<%=bot.ayar.fetch(`fake_${sunucu.id}`)%>">

          <% } %>
					<% if(bot.ayar.has(`fake_${sunucu.id}`) === true) { %>
					<input type="text" style="text-align: left; width:87%;" name="fake" id="fake" value="<%= bot.ayar.fetch(`fake_${sunucu.id}`) %>" maxlength="15" value="<%=bot.ayar.fetch(`fake_${guild.id}`)%>">
          <a href="/dashboard/<%=sunucu.id%>/desteksistemi/sifirla" class="reset-btn" role="button">Sıfırla</a>
          <% } %>
        </div>
      </div>
  
          
               <div class="row">
        <div class="col-25">
          <label for="sRol">LOG Kanalı</label>
        </div>
        <div class="col-75">
      
          <select style="text-align: left; width:87%;" name="kYasak" id="kYasak">
            <option disabled selected>Sunucunuzda yasaklamak istediğiniz bir komut.</option>
            <% arr.forEach(r => {  %>
            <option value="<%=r%>" style="color:#fffff"><%=r%></option>
            <% }); %>
          </select>
         
           </div>
      </div>
          
            <%if(bot.ayar.fetch(`yasakK_${guild.id}`) === null || bot.ayar.fetch(`yasakK_${guild.id}`).length <= 0) {%>
      
               <h5 align="center" style="color:#fff">
              </h5>
        
            <%} else {%>
          
        
        
          <table class="table table-hover" style="background-color:#222">
            <thead>
                <tr>
                  <th scope="col">Komut</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                    <%for(var i = 0; i < bot.ayar.fetch(`yasakK_${guild.id}`).length; i++) {%>
              <%var k = bot.ayar.fetch(`yasakK_${guild.id}`).includes(i) %>
              <tr>
                  <th scope="row"><%=bot.ayar.fetch(`yasakK_${guild.id}`)[i]%></th>
            <td><a class="btn btn-danger" href="/dashboard/<%=guild.id%>/komut-yasak/sil/<%=bot.ayar.fetch(`yasakK_${guild.id}`)[i]%>">Yasağı kaldır</a></td>

                 </tr>

                  <%}%>
            </tbody>
        </table>
              <%}%>
        
          </ul>
          <div style="width: 100%; text-align: right; margin-top: 15px;">
         <button style="background-color:blue; color:#fff" type="sumbit" id="formbtn" class="btn btn-default"><i class="fa fa-fw fa-save" aria-hidden="true"></i> Kaydet</button>
              <a href="manage" button style="background-color:orange; color:#fff" type="sumbit" id="formbtn" class="btn btn-default"><i class="fa fa-mail-reply" aria-hidden="true"></i> Geri Dön</button> </a>    </div>
  
        </div>
      </form>
    </div>
  </div>
    
</div>

  

<script>
	var ts = parseInt($('#guildCreate').text());
	$('#guildCreate').html(`<strong>Created:</strong>: ${moment(ts).format('MMMM Do YYYY (h:mm a)')}`);  
</script>
